        <hr />
    </div>

    <div>
        <br />
        <h3>Suporte a navegadores</h3>
        <table  class="names">
            <thead>
                <tr>
                    <th>Chrome</th>
                    <th>Firefox</th>
                    <th>Microsoft Edge</th>
                    <th>Internet Explorer</th>
                    <th>Opera</th>
                    <th>Safari e demais</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-success">Suportado (45+)</td>
                    <td class="text-success">Suportado (38+)</td>
                    <td class="text-success">Suportado (12+)</td>
                    <td class="text-success">Suportado (10+)</td>
                    <td class="text-success">Suportado (30+)</td>
                    <td class="text-danger">Not Suportado</td>
                </tr>
            </tbody>
        </table>
        <br />
        <br />
        <label>Saiba mais em:</label>
